<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <% if resource.errors.any? -%>
    <div class="alert">
      <p class="header">Please correct the following fields:</p>
      <% resource.errors.full_messages.each do |error| -%>
        <p class="message"><%= error %></p>
      <% end -%>
    </div>
  <% end %>

  <div class="input text"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="input text"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div class="input text"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <div class="submit center"><%= f.submit "Create my account", :class => "button" %></div>
<% end %>