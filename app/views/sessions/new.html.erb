<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <% if resource.errors.any? %>
    <div class="alert"><p class="header">Wrong email/password combination</p>
      <p class="message">Please try again!</p></div>
  <% end -%>

  <% if alert -%>
    <div class="alert"><p><%= alert %></p></div>
  <% end -%>

  <div class="input text fancy_label"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="input text fancy_label"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="input checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="submit center"><%= f.submit "Sign in", :class => "button" %></div>
<% end %>